@model List<Domain.Models.RssNewsItemModel>

@{  
    if (Model.Count > 0)
    {
            foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <h4><a href="@item.Url" target="_blank">@item.Title</a></h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 col-sm-offset-7">
                        <h4 class="text-right"><small>дата публикации: @item.PublishDate.DateTime.ToShortDateString()</small></h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <p class="text-justify">@item.Text</p>

                    </div>

                </div>
                <hr />
            }
    }
    else
    {
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <h5>На данном канале еще нет новостей.</h5>
            </div>
        </div>
    }
}