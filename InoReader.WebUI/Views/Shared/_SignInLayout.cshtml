    <script type="text/javascript">
        function ModalAccountSuccess(data) {
            if (data.success) {
                $('#modDialog').modal('hide');
                setTimeout('location.replace("@Url.Action("Index", "Home")")');
            }
        }

        $(function () {
            $.ajaxSetup({ cache: false });

            //вызываем POPAP авторизации
            $(".login").click(function (e) {

                e.preventDefault();

                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                    $('#modalHeader').text("Авторизация");
                });
            });
            //вызываем POPAP регистрации
            $(".registration").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                    $('#modalHeader').text("Регистрация");
                });
            });
        })
    </script>

    <div id="modDialog" class="modal fade">
        <div class="modal-dialog ">
            <div class="modal-content col-sm-10">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 id="modalHeader"></h3>
                </div>
                <div class="modal-body" id="dialogContent">
                </div>

                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

 
